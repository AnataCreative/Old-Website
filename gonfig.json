{
    "vars": {
        "distPath": "dist/",
        "resourcesPath": "app/"
    },

    "templates": "<=resourcesPath>templates/**/*.html",
    "templateBase": "<=resourcesPath>templates/",
    "templatePages": "<=resourcesPath>templates/pages/**/*.html",
    "scss": "<=resourcesPath>scss/**/*.scss",
    "img": "<=resourcesPath>img/**/*.{png,jpg,jpeg,gif,svg,webp,gif}",
    "fonts": "<=resourcesPath>fonts/**/*.{eot,ttf,woff,woff2}",
    "js": [
        "<=bowerComponentsPath>/velocity/velocity.js",
        "<=resourcesPath>js/scope.js",
        "<=resourcesPath>js/components/*.js",
        "<=resourcesPath>js/app.js"
    ],
    "otherJs": "<=resourcesPath>js/other/*.js",

    "dist": {
        "templates": "",
        "css": "<=distPath>css",
        "js": "<=distPath>js",
        "img": "<=distPath>img",
        "fonts": "<=distPath>fonts"
    },

    "browserSupport": [
        "last 2 versions",
        "ie >= 9"
    ],

    "liveReloadFiles": [
        "<=distPath>css/style.min.css",
        "<=distPath>js/*.js",
        "<=distPath>*.html"
    ]
}
